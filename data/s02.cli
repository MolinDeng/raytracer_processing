# three transformed axis-aligned boxes

fov 60
light 3 3 5 1 1 1
background 0.3 0.3 1

surface   0.9 0.9 0.9

# translate a box
push
translate 0 2 -7
box -1 -1 -1  1 1 1
pop

surface   0.9 0.3 0.3

# scale and translate a box
push
translate -2 -2 -7
scale 1.5 0.7 0.7
box -1 -1 -1  1 1 1
pop

surface   0.3 0.9 0.3

# rotate and translate a box (rotate fails)
push
translate 2 -2 -7
rotate 45  1 0 0
box -1 -1 -1  1 1 1
pop

render
